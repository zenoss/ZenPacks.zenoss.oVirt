<?xml version="1.0" ?>
<component type="ovirt" id="templates" label="Template" pluralLabel="Templates" virtualElement="templates" idField="name" >

    <documentation>ovirt REST API modeler plugin</documentation>

    <attribute name="name" valueQuery='here.find("name").text' label="Name" />
    <attribute name="guid" valueQuery='here.attrib["id"]' display="none" />
    <attribute name="href" valueQuery='here.attrib["href"]' display="none" />
    <attribute name="description" valueQuery='here.find("description").text' label="Description" width='10' />

    <attribute name="template_type" valueQuery='here.find("type").text' label="Type" width='8' />
    <attribute name="template_status" valueQuery='here.find("status").find("state").text' label='Status' width='8' />

    <attribute name="memory" valueQuery='here.find("memory").text' type='int' label="Memory" renderExpression='units(value)' width='20'/>
    <attribute name="os_type" valueQuery='here.find("os").attrib["type"]' label="OS Type" width='20'/>
    <attribute name="creation_time" valueQuery='here.find("creation_time").text' label="Creation Time" width='35'/>
    <attribute name="stateless" valueQuery='here.find("stateless").text' label="Stateless?" />

    <attribute name="cluster_href" valueQuery='here.find("cluster").attrib["href"]' label="Cluster URL" />
    <attribute name="cluster_guid" valueQuery='here.find("cluster").attrib["id"]' label="Cluster GUID" />
    <attribute name="high_availability" valueQuery='here.find("high_availability").find("enabled").text' label="HA" width='10'/>
    <attribute name="high_availability_priority" valueQuery='here.find("high_availability").find("priority").text' label="HA Priority" width='10'/>

</component>

