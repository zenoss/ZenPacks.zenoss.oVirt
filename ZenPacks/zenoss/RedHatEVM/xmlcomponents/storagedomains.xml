<?xml version="1.0" ?>
<component type="ovirt" id="storagedomains" label="Storage Domain" pluralLabel="Storage Domains" virtualElement="storagedomains" idField="name" >

    <documentation>ovirt REST API modeler plugin</documentation>

    <attribute name="name" valueQuery='here.find("name").text' label="Name" />
    <attribute name="guid" valueQuery='here.attrib["id"]' display="none" />
    <attribute name="href" valueQuery='here.attrib["href"]' display="none" />

    <attribute name="data_type" valueQuery='here.find("storage").text' label="Type" />
    <attribute name="master" valueQuery='here.find("master").text' label="Master?" />

    <attribute name="storage_type" valueQuery='here.find("storage").find("type").text' label="Storage Type" />
    <attribute name="storage_address" valueQuery='here.find("storage").find("address").text' label="Storage Address" />
    <attribute name="storage_path" valueQuery='here.find("storage").find("path").text' label="Storage Path" />

    <attribute name="storage_available" valueQuery='here.find("available").text' type='int' label="Available" width='30' />
    <attribute name="storage_used" valueQuery='here.find("used").text' type='int' label="Used" width='30' />
    <attribute name="storage_committed" valueQuery='here.find("committed").text' type='int' label="Committed" width='30' />

    <attribute name="storage_format" valueQuery='here.find("storage_format").text' label="Storage Format" width='30' />

</component>

