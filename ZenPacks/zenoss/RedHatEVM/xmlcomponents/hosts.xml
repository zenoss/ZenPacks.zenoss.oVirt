<?xml version="1.0" ?>
<component type="ovirt" id="hosts" label="Host" pluralLabel="Hosts" virtualElement="hosts" idField="name" >

    <documentation>ovirt REST API modeler plugin</documentation>

    <attribute name="name" valueQuery='here.find("name").text' label="Name" />
    <attribute name="guid" valueQuery='here.attrib["id"]' display="none" />
    <attribute name="href" valueQuery='here.attrib["href"]' display="none" />
    <attribute name="description" valueQuery='here.find("description").text' label="Description" width='80' />

    <attribute name="address" valueQuery='here.find("address").text' label="Address" width='80' />
    <attribute name="port" valueQuery='here.find("port").text' label="Port" width='20' />
    <attribute name="element_status" valueQuery='here.find("status").find("state").text' label='Status' width='20' />

    <attribute name="memory" valueQuery='here.find("memory").text' type='int' label="Memory" />

    <attribute name="os_type" valueQuery='here.find("type").text' label="OS Type" />

    <attribute name="storage_manager" valueQuery='here.find("storage_manager").text' label="Storage Manager" />
    <attribute name="storage_manager_priority" valueQuery='here.find("storage_manager").attrib["priority"]' label="Storage Manager Priority" />

    <attribute name="cluster_href" valueQuery='here.find("cluster").attrib["href"]' label="Cluster URL" />
    <attribute name="cluster_guid" valueQuery='here.find("cluster").attrib["id"]' label="Cluster GUID" />

    <attribute name="iscsi_initiator" valueQuery='here.find("iscsi").find("initiator")text' label="iSCSI Initiator" />

    <attribute name="ksm_enabled" valueQuery='here.find("ksm").find("enabled").text' label="KSM" />

    <attribute name="memory_hugepages_enabled" valueQuery='here.find("transparent_hugepages").find("enabled").text' label="Transparent Hugepages" />

</component>

