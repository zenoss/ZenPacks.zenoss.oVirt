<?xml version="1.0" ?>
<component type="ovirt" id="clusters" label="Cluster" pluralLabel="Clusters" virtualElement="clusters" idField="name" >

    <documentation>ovirt REST API modeler plugin</documentation>

    <attribute name="name" valueQuery='here.find("name").text' label="Name" />
    <attribute name="guid" valueQuery='here.attrib["id"]' display="none" />
    <attribute name="href" valueQuery='here.attrib["href"]' display="none" />
    <attribute name="description" valueQuery='here.find("description").text' label="Description" width='80' />
    <attribute name="major_version" valueQuery='here.find("version").attrib["major"]' label="Major Version" />
    <attribute name="minor_version" valueQuery='here.find("version").attrib["minor"]' label="Minor Version" />

    <attribute name="datacenter_href" valueQuery='here.find("data_center").attrib["href"]' label="Datacenter URL" />
    <attribute name="datacenter_guid" valueQuery='here.find("data_center").attrib["guid"]' label="Datacenter GUID" />

    <attribute name="error_handling_on_error" valueQuery='here.find("error_handling").find("on_error").text' label="Action on Error" />

    <attribute name="memory_overcommit_percent" valueQuery='here.find("memory_policy").find("overcommit").attrib["percent"]' label="Memory Overcommit" />
    <attribute name="memory_hugepages_enabled" valueQuery='here.find("memory_policy").find("transparent_hugepages").find("enabled").text' label="Transparent Hugepages" />
</component>

